{
  "manifest_version": 3,
  "name": "打卡",
  "version": "1.0.0",
  "description": "打卡提醒工具",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "打卡"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "alarms"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "qrcode.png", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

